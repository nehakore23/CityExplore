@model CityExplorer.Models.ViewModels.CityViewModel
@{
    ViewData["Title"] = "Add New City";
}

<style>
    body, .dashboard-card, .btn {
        font-family: 'Segoe UI', 'Roboto', 'Arial', sans-serif;
    }
    .admin-bg {
        background: linear-gradient(135deg, #7F55B1 0%, #9B7EBD 100%);
        min-height: 100vh;
        padding-bottom: 40px;
    }
    .dashboard-card {
        background: #fff;
        border-radius: 18px;
        box-shadow: 0 4px 16px rgba(127,85,177,0.10);
        padding: 2rem 2rem 1.5rem 2rem;
        margin-bottom: 30px;
        transition: box-shadow 0.2s;
        border: 2.5px solid #F49BAB33;
        box-shadow: 0 12px 40px rgba(127,85,177,0.22), 0 1.5px 8px rgba(127,85,177,0.10);
    }
    .dashboard-card:hover {
        box-shadow: 0 8px 32px rgba(127,85,177,0.18);
    }
    .dashboard-title {
        color: #fff;
        font-weight: 700;
        font-size: 2.2rem;
        letter-spacing: 1px;
    }
    .btn-custom, .btn-custom-sm {
        background: linear-gradient(90deg, #F49BAB 0%, #FFB6C1 100%);
        color: #fff;
        border: none;
        border-radius: 50px;
        font-weight: 600;
        box-shadow: 0 2px 8px #F49BAB33;
        padding: 0.7rem 2rem;
        transition: background 0.2s, color 0.2s, box-shadow 0.2s, transform 0.15s;
        letter-spacing: 0.5px;
        font-size: 1.1rem;
    }
    .btn-custom-sm {
        padding: 0.5rem 1.2rem;
        font-size: 1rem;
    }
    .btn-custom:hover, .btn-custom:focus, .btn-custom-sm:hover, .btn-custom-sm:focus {
        background: linear-gradient(90deg, #FFB6C1 0%, #F49BAB 100%);
        color: #fff;
        box-shadow: 0 4px 16px #F49BAB66;
        transform: translateY(-2px) scale(1.03);
    }
    .form-label, .form-check-label {
        font-weight: 700;
        color: #7F55B1;
        letter-spacing: 0.5px;
        font-size: 1.08rem;
        margin-bottom: 0.3rem;
        display: flex;
        align-items: center;
        gap: 0.4em;
    }
</style>

<div class="admin-bg">
    <div class="container py-4">
        <div class="row mb-4 align-items-center">
            <div class="col-md-8">
                <span class="dashboard-title"><i class="fas fa-plus me-2"></i> Add New City</span>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="dashboard-card shadow">
                    <form asp-action="CreateCity" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Name" class="form-label">
                                    <i class="fas fa-city"></i> City Name *
                                </label>
                                <input asp-for="Name" class="form-control" placeholder="Enter city name" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Country" class="form-label">
                                    <i class="fas fa-flag"></i> Country *
                                </label>
                                <input asp-for="Country" class="form-control" placeholder="Enter country name" />
                                <span asp-validation-for="Country" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">
                                <i class="fas fa-info-circle"></i> Description *
                            </label>
                            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter city description"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Price" class="form-label">
                                    <i class="fas fa-indian-rupee-sign"></i> Price per Person *
                                </label>
                                <input asp-for="Price" class="form-control" type="number" step="0.01" placeholder="0.00" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Duration" class="form-label">
                                    <i class="fas fa-clock"></i> Duration (Days) *
                                </label>
                                <input asp-for="Duration" class="form-control" type="number" placeholder="Number of days" />
                                <span asp-validation-for="Duration" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label asp-for="ImageUrl" class="form-label">
                                <i class="fas fa-image"></i> Image URL
                            </label>
                            <input asp-for="ImageUrl" class="form-control" placeholder="Enter image URL (optional)" />
                            <span asp-validation-for="ImageUrl" class="text-danger"></span>
                            <small class="form-text text-muted">You can use placeholder: /images/placeholder.jpg</small>
                        </div>
                        <div class="mb-3 form-check">
                            <input asp-for="IsActive" class="form-check-input" checked />
                            <label asp-for="IsActive" class="form-check-label">
                                <i class="fas fa-toggle-on"></i> Active (Available for booking)
                            </label>
                        </div>
                        <div class="d-flex justify-content-between">
                            <a asp-action="Cities" class="btn btn-custom-sm">
                                <i class="fas fa-arrow-left"></i> Back to Cities
                            </a>
                            <button type="submit" class="btn btn-custom">
                                <i class="fas fa-save"></i> Create City
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

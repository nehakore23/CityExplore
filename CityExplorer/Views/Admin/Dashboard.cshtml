@model dynamic
@{
    ViewData["Title"] = "Admin Dashboard";
}

<style>
    body, .dashboard-card, .stats-card, .table, .btn {
        font-family: 'Segoe UI', 'Roboto', 'Arial', sans-serif;
    }
    .admin-bg {
        background: linear-gradient(135deg, #7F55B1 0%, #9B7EBD 100%);
        min-height: 100vh;
        padding-bottom: 40px;
    }
    .stats-card {
        background: linear-gradient(135deg, #F49BAB 0%, #FFE1E0 100%);
        color: #7F55B1;
        border: none;
        border-radius: 18px;
        box-shadow: 0 4px 16px rgba(127,85,177,0.10);
        transition: transform 0.2s, box-shadow 0.2s;
    }
    .stats-card:hover {
        transform: translateY(-4px) scale(1.03);
        box-shadow: 0 8px 32px rgba(127,85,177,0.18);
    }
    .stats-card h4 {
        font-size: 2.1rem;
        font-weight: bold;
        color: #7F55B1;
    }
    .stats-card p {
        color: #9B7EBD;
        font-size: 1.1rem;
        font-weight: 500;
    }
    .stats-card i {
        color: #F49BAB;
        background: #fff;
        border-radius: 50%;
        padding: 12px;
        box-shadow: 0 2px 8px #F49BAB33;
    }
    .dashboard-card {
        background: #fff;
        border-radius: 18px;
        box-shadow: 0 4px 16px rgba(127,85,177,0.10);
        padding: 2rem 2rem 1.5rem 2rem;
        margin-bottom: 30px;
        transition: box-shadow 0.2s;
    }
    .dashboard-card:hover {
        box-shadow: 0 8px 32px rgba(127,85,177,0.18);
    }
    .dashboard-title {
        color: #fff !important;
        font-weight: 700;
        font-size: 2.2rem;
        letter-spacing: 1px;
        text-shadow: 0 2px 8px #7F55B188;
    }
    .dashboard-welcome {
        color: #fff !important;
        font-size: 1.2rem;
        font-weight: 500;
        text-shadow: 0 2px 8px #7F55B188;
        display: flex;
        align-items: center;
        gap: 0.5em;
    }
    .btn-custom {
        background: linear-gradient(90deg, #7F55B1 0%, #9B7EBD 100%);
        color: #fff;
        border: none;
        border-radius: 50px;
        font-weight: 600;
        box-shadow: 0 2px 8px #7F55B133;
        padding: 0.7rem 2rem;
        transition: background 0.2s, color 0.2s, box-shadow 0.2s;
    }
    .btn-custom:hover, .btn-custom:focus {
        background: linear-gradient(90deg, #9B7EBD 0%, #7F55B1 100%);
        color: #fff;
        box-shadow: 0 4px 16px #7F55B166;
    }
    .table thead {
        background: #7F55B1;
        color: #fff;
    }
    .table tbody tr {
        transition: background 0.2s;
    }
    .table-hover tbody tr:hover {
        background: #F49BAB22;
    }
    .badge-custom {
        background: #F49BAB;
        color: #7F55B1;
        font-weight: 600;
        border-radius: 12px;
        padding: 0.4em 1em;
        font-size: 1em;
    }
    .popular-city {
        background: #FFE1E0;
        border-radius: 12px;
        padding: 1em 1.2em;
        margin-bottom: 1em;
        box-shadow: 0 2px 8px #F49BAB22;
        display: flex;
        align-items: center;
        justify-content: space-between;
        transition: box-shadow 0.2s;
    }
    .popular-city:hover {
        box-shadow: 0 4px 16px #F49BAB44;
    }
    .popular-city strong {
        color: #7F55B1;
        font-size: 1.1em;
    }
    .popular-city small {
        color: #9B7EBD;
    }
</style>

<div class="admin-bg">
    <div class="container py-4">
        <div class="row mb-4 align-items-center">
            <div class="col-md-8">
                <span class="dashboard-title"><i class="fas fa-tachometer-alt me-2"></i> Admin Dashboard 🛡️</span>
            </div>
            <div class="col-md-4 text-md-end mt-2 mt-md-0">
                <span class="dashboard-welcome">👋 Welcome back, <strong>@ViewBag.Username</strong></span>
            </div>
        </div>
        <!-- Statistics Cards -->
        <div class="row g-4 mb-4">
            <div class="col-md-3">
                <div class="card stats-card shadow h-100">
                    <div class="card-body d-flex flex-column align-items-center justify-content-center">
                        <i class="fas fa-city fa-2x mb-2"></i>
                        <div class="fs-4 fw-bold">@ViewBag.TotalCities</div>
                        <div class="text-muted">Total Cities</div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card stats-card shadow h-100">
                    <div class="card-body d-flex flex-column align-items-center justify-content-center">
                        <i class="fas fa-users fa-2x mb-2"></i>
                        <div class="fs-4 fw-bold">@ViewBag.TotalCustomers</div>
                        <div class="text-muted">Total Customers</div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card stats-card shadow h-100">
                    <div class="card-body d-flex flex-column align-items-center justify-content-center">
                        <i class="fas fa-calendar-check fa-2x mb-2"></i>
                        <div class="fs-4 fw-bold">@ViewBag.TotalBookings</div>
                        <div class="text-muted">Total Bookings</div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card stats-card shadow h-100">
                    <div class="card-body d-flex flex-column align-items-center justify-content-center">
                        <i class="fas fa-dollar-sign fa-2x mb-2"></i>
                        <div class="fs-4 fw-bold">@ViewBag.TotalRevenue</div>
                        <div class="text-muted">Total Revenue</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mb-4 g-4">
            <div class="col-12">
                <div class="dashboard-card shadow">
                    <h4 class="mb-3 fw-bold" style="color:#7F55B1;"><i class="fas fa-bolt me-2" style="color:#F49BAB;"></i> Quick Actions</h4>
                    <div class="row g-3">
                        <div class="col-md-4">
                            <a asp-action="Cities" class="btn btn-custom w-100 rounded-pill shadow-sm px-4 py-3">
                                <i class="fas fa-city"></i><br>Manage Cities
                            </a>
                        </div>
                        <div class="col-md-4">
                            <a asp-action="Customers" class="btn btn-custom w-100 rounded-pill shadow-sm px-4 py-3">
                                <i class="fas fa-users"></i><br>View Customers
                            </a>
                        </div>
                        <div class="col-md-4">
                            <a asp-action="Bookings" class="btn btn-custom w-100 rounded-pill shadow-sm px-4 py-3">
                                <i class="fas fa-calendar-check"></i><br>View Bookings
                            </a>
                        </div>
                        @* <div class="col-md-3">
                            <a href="#" class="btn btn-custom w-100 rounded-pill shadow-sm px-4 py-3" onclick="generateReport()">
                                <i class="fas fa-chart-bar"></i><br>Generate Report
                            </a>
                        </div> *@
                    </div>
                </div>
            </div>
        </div>
        <!-- Recent Bookings and Popular Cities -->
        <div class="row g-4">
            <div class="col-lg-8">
                <div class="dashboard-card shadow">
                    <h4 class="mb-3 fw-bold" style="color:#7F55B1;"><i class="fas fa-clock me-2" style="color:#9B7EBD;"></i> Recent Bookings</h4>
                    <div class="table-responsive">
                        <table class="table table-hover table-sm text-center align-middle">
                            <thead>
                                <tr>
                                    <th>Customer</th>
                                    <th>City</th>
                                    <th>Date</th>
                                    <th>Amount</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (ViewBag.RecentBookings != null)
                                {
                                    @foreach (var booking in ViewBag.RecentBookings)
                                    {
                                        <tr>
                                            <td>@booking.User.FullName</td>
                                            <td>@booking.City.Name</td>
                                            <td>@booking.BookingDate.ToString("MMM dd, yyyy")</td>
                                            <td>₹@booking.TotalAmount.ToString("F2")</td>
                                            <td>
                                                <span class="badge badge-custom">@booking.Status</span>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="text-center text-muted">No recent bookings</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="dashboard-card shadow">
                    <h4 class="mb-3 fw-bold" style="color:#7F55B1;"><i class="fas fa-star me-2" style="color:#F49BAB;"></i> Popular Cities</h4>
                    @if (ViewBag.PopularCities != null)
                    {
                        @foreach (var city in ViewBag.PopularCities)
                        {
                            <div class="popular-city">
                                <div>
                                    <strong>@city.Name</strong><br>
                                    <small>@city.Country</small>
                                </div>
                                <span class="badge badge-custom">@city.BookingCount bookings</span>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted">No data available</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function generateReport() {
       
        fetch('/api/admin/generate-report', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            }
        })
        .then(response => response.blob())
        .then(blob => {
            const url = window.URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.style.display = 'none';
            a.href = url;
            a.download = 'admin-report.pdf';
            document.body.appendChild(a);
            a.click();
            window.URL.revokeObjectURL(url);
        })
        .catch(error => {
            console.error('Error generating report:', error);
            alert('Error generating report. Please try again.');
        });
    }
</script>

      .ezy__team4_dWfZcNm0-heading {
        font-weight: 800;
        font-size: 2.2rem;
        color: #7F55B1;
        letter-spacing: 1px;
        margin-bottom: 0.5rem;
      }
      .ezy__team4_dWfZcNm0-sub-heading {
        font-size: 1.1rem;
        color: #7F55B1cc;
        font-weight: 500;
        margin-bottom: 0.5rem;
      }
      .team-card-modern {
        background: rgba(255,255,255,0.95);
        border-radius: 22px;
        box-shadow: 0 8px 32px rgba(127,85,177,0.13), 0 1.5px 8px rgba(127,85,177,0.10);
        border: 1.5px solid #f49bab33;
        transition: box-shadow 0.25s, transform 0.18s;
        min-width: 240px;
        max-width: 320px;
        margin: 0 auto;
        overflow: visible;
        backdrop-filter: blur(2.5px);
        display: flex;
        flex-direction: column;
        align-items: center;
        height: 100%;
      }
      .team-card-modern:hover {
        box-shadow: 0 16px 48px rgba(127,85,177,0.22);
        transform: translateY(-8px) scale(1.04);
      }
      .team-img-wrapper {
        width: 120px;
        height: 120px;
        margin: -60px auto 0 auto;
        border-radius: 50%;
        overflow: hidden;
        border: 5px solid #fff;
        box-shadow: 0 4px 16px #f49bab33;
        background: #f8e1ff;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        z-index: 2;
      }
      .team-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 50%;
        border: 2px solid #e0e7ff;
        display: block;
        aspect-ratio: 1/1;
      }
      .team-name {

@model dynamic
@{
    ViewData["Title"] = "Customer Dashboard";
}

<style>
    body, .dashboard-card, .stats-card, .table, .btn {
        font-family: 'Segoe UI', 'Roboto', 'Arial', sans-serif;
    }
    .customer-bg {
        background: linear-gradient(135deg, #7F55B1 0%, #9B7EBD 100%);
        min-height: 100vh;
        padding-bottom: 40px;
    }
    .dashboard-title {
        color: #fff;
        font-weight: 700;
        font-size: 2.2rem;
        letter-spacing: 1px;
        text-shadow: 0 2px 8px #7F55B188;
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        gap: 0.5em;
    }
    .dashboard-welcome {
        color: #fff;
        font-size: 1.2rem;
        font-weight: 500;
        text-shadow: 0 2px 8px #7F55B188;
        display: flex;
        align-items: center;
        gap: 0.5em;
    }
    .dashboard-card {
        background: rgba(255,255,255,0.85);
        border-radius: 22px;
        box-shadow: 0 8px 32px rgba(127,85,177,0.18), 0 1.5px 8px rgba(127,85,177,0.10);
        padding: 2.5rem 2.5rem 2rem 2.5rem;
        margin-bottom: 30px;
        border: 2.5px solid #F49BAB33;
        backdrop-filter: blur(8px);
        transition: box-shadow 0.2s, border 0.2s;
    }
    .dashboard-card:hover {
        box-shadow: 0 12px 40px rgba(127,85,177,0.22);
        border: 2.5px solid #F49BAB44;
    }
    .stats-card {
        background: linear-gradient(135deg, #F49BAB 0%, #FFE1E0 100%);
        color: #7F55B1;
        border: none;
        border-radius: 18px;
        box-shadow: 0 4px 16px rgba(127,85,177,0.10);
        transition: transform 0.2s, box-shadow 0.2s;
    }
    .stats-card:hover {
        transform: translateY(-4px) scale(1.03);
        box-shadow: 0 8px 32px rgba(127,85,177,0.18);
    }
    .stats-card h3 {
        font-size: 2.1rem;
        font-weight: bold;
        color: #7F55B1;
    }
    .stats-card p {
        color: #9B7EBD;
        font-size: 1.1rem;
        font-weight: 500;
    }
    .stats-card i {
        color: #F49BAB;
        background: #fff;
        border-radius: 50%;
        padding: 12px;
        box-shadow: 0 2px 8px #F49BAB33;
    }
    .btn-custom, .btn-custom-sm {
        background: linear-gradient(90deg, #F49BAB 0%, #FFB6C1 100%);
        color: #fff;
        border: none;
        border-radius: 50px;
        font-weight: 600;
        box-shadow: 0 2px 8px #F49BAB33;
        padding: 0.7rem 2rem;
        transition: background 0.2s, color 0.2s, box-shadow 0.2s, transform 0.15s;
        letter-spacing: 0.5px;
        font-size: 1.1rem;
    }
    .btn-custom-sm {
        padding: 0.5rem 1.2rem;
        font-size: 1rem;
    }
    .btn-custom:hover, .btn-custom:focus, .btn-custom-sm:hover, .btn-custom-sm:focus {
        background: linear-gradient(90deg, #FFB6C1 0%, #F49BAB 100%);
        color: #fff;
        box-shadow: 0 4px 16px #F49BAB66;
        transform: translateY(-2px) scale(1.03);
    }
    .table {
        background: transparent;
        border-radius: 14px;
        overflow: hidden;
    }
    .table thead {
        background: #7F55B1;
        color: #fff;
        font-size: 1.08rem;
        letter-spacing: 0.5px;
    }
    .table tbody tr {
        transition: background 0.2s;
    }
    .table-hover tbody tr:hover {
        background: #F49BAB22;
    }
    .badge-custom {
        background: #F49BAB;
        color: #7F55B1;
        font-weight: 600;
        border-radius: 12px;
        padding: 0.4em 1em;
        font-size: 1em;
    }
    .no-bookings {
        color: #9B7EBD;
        text-align: center;
        padding: 3rem 0 2rem 0;
    }
    .no-bookings i {
        font-size: 3rem;
        color: #F49BAB;
        margin-bottom: 1rem;
    }
</style>

<!-- HTML -->
<div class="customer-bg">
    <div class="container py-4">
        <div class="row mb-4 align-items-center">
            <div class="col-md-8">
                <span class="dashboard-title"><i class="fas fa-user"></i> My Dashboard</span>
            </div>
            <div class="col-md-4 text-md-end mt-2 mt-md-0">
                <span class="dashboard-welcome">👋 Welcome, <strong>@ViewBag.FullName</strong></span>
            </div>
        </div>

        <div class="row mb-4 g-4">
            <div class="col-md-4">
                <div class="card stats-card shadow h-100">
                    <div class="card-body text-center">
                        <i class="fas fa-calendar-check fa-3x mb-3"></i>
                        <h3>@ViewBag.TotalBookings</h3>
                        <p class="mb-0">Total Bookings</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card stats-card shadow h-100">
                    <div class="card-body text-center">
                        <i class="fas fa-map-marked-alt fa-3x mb-3"></i>
                        <h3>@ViewBag.CitiesVisited</h3>
                        <p class="mb-0">Cities Visited</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card stats-card shadow h-100">
                    <div class="card-body text-center">
                        <i class="fas fa-dollar-sign fa-3x mb-3"></i>
                        <h3>₹@ViewBag.TotalSpent</h3>
                        <p class="mb-0">Total Spent</p>
                    </div>
                </div>
            </div>
        </div>
   
        <div class="row mb-4 g-4">
            <div class="col-12">
                <div class="dashboard-card shadow">
                    <h4 class="mb-3 fw-bold" style="color:#7F55B1;"><i class="fas fa-bolt me-2" style="color:#F49BAB;"></i> Quick Actions</h4>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <a asp-action="Cities" class="btn btn-custom w-100 rounded-pill shadow-sm px-4 py-3">
                                <i class="fas fa-search fa-2x d-block mb-2"></i>
                                Browse Cities
                            </a>
                        </div>
                        <div class="col-md-6">
                            <a asp-action="MyBookings" class="btn btn-custom w-100 rounded-pill shadow-sm px-4 py-3">
                                <i class="fas fa-list fa-2x d-block mb-2"></i>
                                My Bookings
                            </a>
                        </div>
                        @* <div class="col-md-4">
                            <a href="#" class="btn btn-custom w-100 rounded-pill shadow-sm px-4 py-3" onclick="findRecommendations()">
                                <i class="fas fa-thumbs-up fa-2x d-block mb-2"></i>
                                Recommendations
                            </a>
                        </div> *@
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-8">
                <div class="dashboard-card shadow">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4 class="mb-0" style="color:#7F55B1;"><i class="fas fa-history text-info"></i> Recent Bookings</h4>
                        <a asp-action="MyBookings" class="btn btn-custom-sm">
                            View All
                        </a>
                    </div>
                    @if (ViewBag.RecentBookings != null && ViewBag.RecentBookings.Count > 0)
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle">
                                <thead>
                                    <tr>
                                        <th>City</th>
                                        <th>Date</th>
                                        <th>People</th>
                                        <th>Amount</th>
                                        <th>Status</th>
                                        @* <th>Action</th> *@
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var booking in ViewBag.RecentBookings)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@booking.City.Name</strong><br>
                                                <small class="text-muted">@booking.City.Country</small>
                                            </td>
                                            <td>@booking.BookingDate.ToString("MMM dd, yyyy")</td>
                                            <td>@booking.NumberOfPeople</td>
                                            <td>$@booking.TotalAmount.ToString("F2")</td>
                                            <td>
                                                <span class="badge-custom bg-@(booking.Status == "Confirmed" ? "success" : booking.Status == "Pending" ? "warning" : "danger")">
                                                    @booking.Status
                                                </span>
                                            </td>
                                            @* <td>
                                                <button class="btn btn-custom-sm" onclick="viewBookingDetails(@booking.Id)">
                                                    <i class="fas fa-eye"></i>
                                                </button>
                                            </td> *@
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="no-bookings">
                            <i class="fas fa-calendar-times"></i>
                            <h5>No bookings yet</h5>
                            <p>Start exploring amazing cities!</p>
                            <a asp-action="Cities" class="btn btn-custom">
                                <i class="fas fa-search"></i> Browse Cities
                            </a>
                        </div>
                    }
                </div>
            </div>
            <div class="col-lg-4">
                <div class="dashboard-card shadow">
                    <h4 class="mb-3 fw-bold" style="color:#7F55B1;"><i class="fas fa-star me-2" style="color:#F49BAB;"></i> Recommended for You</h4>
                    @if (ViewBag.RecommendedCities != null)
                    {
                        @foreach (var city in ViewBag.RecommendedCities)
                        {
                            <div class="card mb-3">
                                <div class="card-body p-3">
                                    <h6 class="card-title mb-1">@city.Name, @city.Country</h6>
                                    <p class="card-text small text-muted mb-2">@city.Description.Substring(0, Math.Min(80, city.Description.Length))...</p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span class="text-primary font-weight-bold">$@city.Price.ToString("F2")</span>
                                        <a href="#" class="btn btn-custom-sm" onclick="bookTour(@city.Id)">
                                            Book Now
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-3">
                            <i class="fas fa-compass fa-2x text-muted mb-2"></i>
                            <p class="text-muted small">Explore cities to get personalized recommendations</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function findRecommendations() {
        fetch('/api/customer/recommendations')
            .then(response => response.json())
            .then(data => {
                console.log('Recommendations:', data);
            })
            .catch(error => {
                console.error('Error fetching recommendations:', error);
            });
    }

    function viewBookingDetails(bookingId) {
        window.location.href = '/Customer/BookingDetails/' + bookingId;
    }

    function bookTour(cityId) {
        window.location.href = '/Customer/BookTour/' + cityId;
    }
</script>
